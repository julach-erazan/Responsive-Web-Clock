}

.center_div{
    width: 280px;
    height: 320px;
    background-image: linear-gradient(65deg,#ecebeb,#a1a0a0,#ecebeb);
    border-radius: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: ddfont;
    color: #fff;
}

.black_div{
    width: 250px;
    height: calc(100% - 30px);
    background: rgb(0, 0, 0);
    border-radius: 40px;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    font-size: 30px;
}

.anlgClock{
    width: 230px;
    height: 230px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: url(angClockface.png);
    background-size:cover;
    display: visible;
}

.anlgClock::before{
    content: '';
    position: absolute;
    width: 15px;
    height: 15px;
    background: black;
    border-radius: 50%;
    z-index: 10000;
}

.anlgClock .hour,
.anlgClock .min,
.anlgClock .sec
{
    position: absolute;
}

.anlgClock .hour, .hr{
    width: 90px;
    height: 90px;
}

.anlgClock .min, .mn{
    width: 130px;
    height: 130px;
}

.anlgClock .sec, .sc{
    width: 170px;
    height: 170px;
}

.hr, .mn, .sc{
    display: flex;
    justify-content: center;
    position: absolute;
    border-radius: 50%;
}

.hr:before{
    content: '';
    position: absolute;
    width: 6px;
    height: 50px;
    background: #c9002b;
    z-index: 10;
    border-radius: 6px 6px 0 0;
}

.mn:before{
    content: '';
    position: absolute;
    width: 4px;
    height: 70px;
    background: #ff0000;
    z-index: 11;
    border-radius: 6px 6px 0 0;
}

.sc:before{
    content: '';
    position: absolute;
    width: 2px;
    height: 90px;
    background: #7a7a7a;
    z-index: 12;
    border-radius: 6px 6px 0 0;
}

